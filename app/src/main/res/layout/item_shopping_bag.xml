<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E5E5">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgfinal"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/wom1" />

            <TextView
                android:id="@+id/txt_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imgfinal"
                android:text="Brand Name"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_brand_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/imgfinal"
                android:text="Description"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E5E5E5"
                android:padding="5dp"
                android:layout_below="@id/txt_description"
                android:layout_toRightOf="@id/imgfinal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/size"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_down"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E5E5E5"
                android:padding="5dp"
               android:layout_below="@id/txt_description"
                android:layout_toRightOf="@id/ll_size"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Qty : 1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_down"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_size"
                android:layout_toRightOf="@id/imgfinal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 399"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_off_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="9dp"
                    android:layout_toRightOf="@+id/tv_amount"
                    android:foreground="@drawable/strikethrough_text"
                    android:text="Rs 599"
                    android:textColor="#E5E5E5"
                    android:textSize="@dimen/txt_size_12" />

                <TextView
                    android:id="@+id/txt_per_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 % OFF"
                    android:textColor="@color/red_800"
                    android:textSize="@dimen/txt_size_11"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgfinal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="COD Available"
                android:textSize="@dimen/txt_size_12"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgfinal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cod"
                android:text="Typically delivered in 3-5 working days"
                android:textSize="@dimen/txt_size_12" />

            <View
                android:id="@+id/vertical"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cod"
                android:background="#E5E5E5" />


            <Button
                android:id="@+id/txtAddBasket"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:background="@color/white"
                android:text="Remove"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View

                android:layout_width="3dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/txtAddBasket"
                android:layout_below="@id/vertical"
                android:layout_marginTop="10dp"
                android:background="#E5E5E5" />

            <Button
                android:id="@+id/txtBuyNow"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/txtAddBasket"
                android:background="@color/white"
                android:text="Move to Wishlist"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>