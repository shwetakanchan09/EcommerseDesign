<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="15dp"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_voucher"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rin_g"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/baby" />

    <TextView
        android:id="@+id/tv_voucher_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/cv_price"
        android:text="Voucher Name"
        android:gravity="center"
        android:textSize="@dimen/txt_size_12sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_validity_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@id/cv_price"
        android:text="Validity"
        android:textSize="9sp"
       android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnActive"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#E5E5E5"
            android:text="Active"
            android:textColor="@color/black"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>