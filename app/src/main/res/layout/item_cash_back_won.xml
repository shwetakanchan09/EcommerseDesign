<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/reyound"/>

    <TextView
        android:id="@+id/txtOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/img_logo"
        android:padding="5dp"
        android:text="For Transfering Money\n on Jan 09 2022"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/txtOrderName"
        android:gravity="end"
        android:padding="5dp"
        android:text="â‚¹ 05"
        android:textColor="@color/red_900"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtCredited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrderName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_logo"
        android:padding="5dp"
        android:text="Credited Date"
        android:textSize="14sp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_marginStart="200dp"
        android:layout_below="@id/txtOrderName"
        android:layout_toRightOf="@id/txtCredited"
        android:src="@drawable/wallet1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtCredited"
        android:layout_marginTop="5dp"
        android:background="#E5E5E5"
        android:padding="10dp" />


</RelativeLayout>